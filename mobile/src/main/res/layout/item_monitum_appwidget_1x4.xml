<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holyday_info_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_widget_color">

    <!-- Date / Summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/widget_padding"
        android:paddingLeft="@dimen/widget_padding"
        android:paddingRight="@dimen/widget_padding">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/date_text_size"
            android:gravity="center"
            android:text="@string/date"/>

        <ImageView
            android:id="@+id/dayColorImageView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/holy_day_square_height"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="@dimen/small_spacing"
            android:src="@drawable/ic_square_violet"
            />
    </LinearLayout>

    <!-- Button Panel -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_padding">

        <ImageView
            android:id="@+id/hdoButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/small_spacing"
            android:background="@drawable/grey_rounded_rect"
            android:layout_marginRight="@dimen/medium_spacing"
            android:src="@drawable/ic_hdo_red"/>

        <ImageView
            android:id="@+id/sdpButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:padding="@dimen/small_spacing"
            android:background="@drawable/grey_rounded_rect"
            android:layout_marginRight="@dimen/medium_spacing"
            android:src="@drawable/ic_sdp_red"/>

        <ImageView
            android:id="@+id/dietaryRestrictionsImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:padding="@dimen/small_spacing"
            android:background="@drawable/grey_rounded_rect"
            android:layout_marginRight="@dimen/medium_spacing"
            android:src="@drawable/ic_fish"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_spacing"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/rosaryImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:padding="@dimen/small_spacing"
                android:background="@drawable/grey_rounded_rect"
                android:src="@drawable/ic_rosary"/>

            <TextView
                android:id="@+id/rosaryTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/medium_spacing"
                android:text="@string/glorious"/>

        </FrameLayout>
    </LinearLayout>
</LinearLayout>